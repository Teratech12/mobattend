<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/background_light">


    <ImageView

        android:layout_centerVertical="true"
        android:id="@+id/item_info"
        android:src= "@drawable/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/layoutbackground1" />

    <TextView
        android:text="studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_info"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/name"
        android:layout_marginBottom="10dp"
        android:textColor="#0D0D0D"
        android:layout_alignTop="@+id/item_info" />

    <TextView
        android:text="IndexNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:textColor="#0AAEF3"
        android:id="@+id/type" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"

        android:id="@+id/editText"
        android:layout_alignTop="@+id/radiogroup" />

    <RadioGroup
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/radiogroup"
          android:orientation="horizontal"

        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
    >

     <RadioButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:buttonTint="@color/radiobutton3"/>
          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:buttonTint="@color/radiobutton2"/>
          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:buttonTint="@color/radiobutton1"/>




          </RadioGroup>


</RelativeLayout>
