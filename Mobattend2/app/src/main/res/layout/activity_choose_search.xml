<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sky_phase.mobattend.ChooseSearch">

    <ImageView
        android:id="@+id/search_by_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_menu_share" />

    <TextView
        android:text="Select from a drop down list dates for all the attendance taken for the class chosen. Choose a date from the list and get names of all the students present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_by_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/date_info" />

    <ImageView
        android:id="@+id/student_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/date_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_menu_share" />

    <TextView
        android:text="Select from a drop down list the names of all the students in that class chosen.Select a student to find out all the dates the student was present in that particular class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_name"
        android:layout_alignLeft="@+id/date_info"
        android:layout_alignStart="@+id/date_info"
        android:layout_marginTop="12dp"
        android:id="@+id/name_info" />

</RelativeLayout>
