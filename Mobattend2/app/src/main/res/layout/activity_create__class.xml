<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create__class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sky_phase.mobattend.CREATE_CLASS">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Enter class name" />

    <Button
        android:id="@+id/addstudentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Students"
        android:textColor="#1A2844"
        android:layout_below="@+id/ClassIdEditBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter course code"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/ClassNameEditBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:ems="10"
        android:id="@+id/ClassNameEditBox"
        android:hint="Class/Course/Meeting Name"
        android:textAlignment="center"
        android:backgroundTint="#0958CF"
        android:textColorHighlight="#0958CF"
        android:textColorLink="#0958CF"
        android:focusable="true"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textCursorDrawable="@drawable/cursor"
        android:theme="@style/EditTextStyleme"/>


    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789-_ "
        android:ems="10"
        android:id="@+id/ClassIdEditBox"
        android:hint="Unique Class Id"
        android:textAlignment="center"
        android:backgroundTint="#0958CF"
        android:textColorHighlight="#0958CF"
        android:textColorLink="#0958CF"
        android:focusable="true"
        android:textCursorDrawable="@drawable/cursor"
        android:theme="@style/EditTextStyleme"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
