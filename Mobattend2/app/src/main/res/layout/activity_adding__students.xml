<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adding__students"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sky_phase.mobattend.ADDING_STUDENTS">

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="77dp"
        android:id="@+id/studentNameEditBox"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:hint="Student Name"
        android:textAlignment="center"
        android:textColorLink="@color/radiobutton2"
        android:textColorHighlight="@color/radiobutton2"
        android:backgroundTint="@color/radiobutton2" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/studentNameEditBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/studentIdEditBox"
        android:hint="Unique Identification Number"
        android:textAlignment="center"
        android:textColorHighlight="#0958CF"
        android:textColorLink="#0958CF"
        android:backgroundTint="#0958CF"
        android:focusableInTouchMode="true"
        />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/studentIdEditBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/classNameUnedit"

        android:textAlignment="center"
        android:inputType="none"
        android:enabled="false"
        android:editable="false"
        android:backgroundTint="#0958CF"
        android:textColorHighlight="#0958CF"
        android:textColorLink="#0958CF"
        android:focusableInTouchMode="true"
        android:focusable="true"/>


    <TextView
        android:text="Submit and add another student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:id="@+id/AddAnotherStudentText"
        android:textColor="#1A2844" />

    <TextView
        android:text="Submit and Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/AddAnotherStudentText"
        android:layout_alignStart="@+id/AddAnotherStudentText"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="36dp"
        android:id="@+id/FinishText"
        android:textColor="#1A2844" />
</RelativeLayout>
