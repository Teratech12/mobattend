<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/background_light">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type1"
        android:layout_alignRight="@+id/type"
        android:layout_alignEnd="@+id/type"
        android:layout_below="@+id/name"
        android:textColor="#1A2844"
        tools:text="Datesaved"
        android:visibility="invisible"/>

    <TextView
        android:text="ClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="14dp"
        android:id="@+id/name"
        android:textColor="#0D0D0D"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_info" />

    <TextView
        android:text="courseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_alignBaseline="@+id/type1"
        android:layout_alignBottom="@+id/type1"
        android:layout_alignParentEnd="true" />

    <ImageView

        android:id="@+id/item_info"
        android:src= "@drawable/cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
