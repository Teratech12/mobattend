<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="10dp"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="25"
        android:text="studentName"
        android:textColor="#0D0D0D"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="attended"
        android:textColor="#0AAEF3"
        android:textSize="16dp"
        android:layout_toStartOf="@+id/holdpercentageA"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>

    <TextView
        android:text="Present(%)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/precentageP"
        android:textColor="@color/radiobutton3"
        android:textSize="10sp" />

    <TextView
        android:text="percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/precentageP"
        android:layout_alignParentStart="true"
        android:id="@+id/holdpercentageP"
        android:textColor="@android:color/background_dark"
        android:textSize="10sp" />

    <TextView
        android:text="percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percentageA"
        android:layout_alignParentRight="true"

        android:id="@+id/holdpercentageA"
        android:textColor="@android:color/background_dark"
        android:textSize="10sp" />

    <TextView
        android:text="Absent(%)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentageA"
        android:textColor="@color/radiobutton1"
        android:layout_above="@+id/holdpercentageP"
        android:layout_alignParentRight="true"
        android:textSize="10sp" />

    <ImageView
        android:layout_height="20dp"
        android:src="@drawable/ic_menu_share"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/displaycount"
        android:layout_width="40dp" />
    <TextView
        android:text="Last seen in class:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastSeen"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:layout_below="@+id/holdpercentageP"
        android:layout_alignParentLeft="true"

        android:textSize="10sp" />
    <TextView
        android:text="22/04/2017 10:27  AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastSeenhold"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:layout_below="@+id/holdpercentageA"


        android:textSize="10sp"
        android:layout_centerInParent="true" />


</RelativeLayout>
